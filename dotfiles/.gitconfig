[user]
    name = Tapani Kiiskinen
[include]
    path = .gitconfig_local
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
    renames = true
[core]
    editor = vim
    pager = less -FRX -x4
[color]
    ui = auto
[alias]
    ci = commit
    br = branch
    co = checkout
    st = status
    df = diff
    dfs = diff --stat
    dc = diff --cached
    dcs = diff --cached --stat
    lg = log
    h = help
    last = log -1
    lsd = log --graph --decorate --pretty=oneline --abbrev-commit --all
    find = "!cd ${GIT_PREFIX:-.} && gitfind() { git ls-files | grep -i $@; } && gitfind"
    whoami = "!echo $(git config --get user.name) \\<$(git config --get user.email)\\>"
    ignored = ls-files --others -i --exclude-standard
    yolo = "!git add --all; git commit"
[mergetool]
    keepBackup = false
[push]
    default = current
[grep]
    linenumber = true
[pull]
    rebase = true
